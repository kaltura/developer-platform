script.
  var modalPlayer = KalturaPlayer.setup({
  targetId: "full-video",
    provider: {
      partnerId: 2421271,
      uiConfId: 43006971
    },
    playback: {
      preload: 'auto',
      autoplay: false,
      muted: false,
      loop: true
    }
  });
  modalPlayer.loadMedia({entryId: '1_23yaxsca'}).then(function() {
    modalPlayer.load();
  });

  $('.launch-modal').on('click', function(e){
    e.preventDefault();
    $( '#' + $(this).data('modal-id') ).modal();
    heroPlayer.pause();
    modalPlayer.play();
  });

  $('#modal-video').on('hide.bs.modal', function (e) {
    heroPlayer.play();
    modalPlayer.pause();
    modalPlayer.currentTime=0; 
  })


  